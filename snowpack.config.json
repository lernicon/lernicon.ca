{
  "extends": "@snowpack/app-scripts-svelte",
  "scripts": {
    "build:css": "postcss",
    "mount:src": "mount src --to /_dist_",
    "mount:public": "mount public --to /"
  },
  "devOptions": {
    "fallback": "dev.html"
  },
  "plugins": [
    "@snowpack/plugin-parcel", [
      "@snowpack/plugin-svelte", { "hydratable": true, "css": false }
    ]
  ]
}
